!! Rofi
rofi.bw:		5
rofi.modi:		drun,run
rofi.font:		Roboto Condensed 11
rofi.width:		33
rofi.lines:		14
rofi.padding:		11
rofi.location:		3
rofi.line-margin:	10
rofi.line-padding:	10
rofi.scroll-method:	1
rofi.hide-scrollbar:	true
rofi.disable-history:	true

!! URxvt
URxvt.font: 		xft:Iosevka:style=Medium:size=12,xft:Unifont
URxvt.boldFont: 	xft:Iosevka:style=Bold:size=12,xft:Unifont
URxvt.scrollBar: 	false
URxvt.internalBorder: 	15
URxvt.intensityStyles: 	false

!!! Solarized Colors
